<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndianCusine">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8DFD5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/indianCuisineTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sriracha"
            android:text="Indian Restaurants"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#E81E46"
            android:textSize="20sp"/>

        <ListView
            android:id="@+id/indianLV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/indian_restaurants" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="372dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/italian_food_pic_foreground" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>