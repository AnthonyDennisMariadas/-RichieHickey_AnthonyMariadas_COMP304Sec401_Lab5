<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItalianCusine">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:background="#E8DFD5"
        android:layout_height="603dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sriracha"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#E81E46"
            android:textSize="20sp"
            android:text="Italian Restaurants" />

        <ListView
            android:id="@+id/italianlistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/italian_restaurants" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="301dp"
            android:layout_weight="1"
            android:background="#00AF8686"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/italian_food_pic_foreground" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>