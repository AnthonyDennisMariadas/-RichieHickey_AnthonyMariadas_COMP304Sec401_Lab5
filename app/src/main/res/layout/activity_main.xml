<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8DFD5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sriracha"
            android:phoneNumber="false"
            android:text="List of Cuisines"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#E81E46"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/cuisineListview"
            android:layout_width="match_parent"
            android:layout_height="404dp"
            android:divider="@android:drawable/divider_horizontal_textfield"
            android:drawSelectorOnTop="true"
            android:entries="@array/cuisine_types"
            android:listSelector="#00FF8800"
            android:textAlignment="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>